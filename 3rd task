file_name = ','.join(perem)
print(file_name)
def count_lines(file_name, chunk_size=1<<13):
    with open(file_name) as file:
        return sum(chunk.count('\n')
                   for chunk in iter(lambda: file.read(chunk_size), ''))

#print('Loaded: {firsttxt} 1txt, {twotxt} 2txt, '
